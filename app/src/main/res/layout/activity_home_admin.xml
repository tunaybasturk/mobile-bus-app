<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_admin"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Admin Page"
            android:textSize="36dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/black"
            android:background="@drawable/title_frame"

            >

        </TextView>

        <ImageView
            android:layout_width="206dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/station"

            ></ImageView>
        <Button
            android:id="@+id/btn_create_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a new station"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:backgroundTint="#CD182D"

            ></Button>

        <ImageView
            android:layout_width="206dp"
            android:layout_height="172dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/bus"

            ></ImageView>
        <Button
            android:id="@+id/btn_bus_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bus Manage System"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:backgroundTint="#CD182D"

            ></Button>

        <ImageView
            android:layout_width="270dp"
            android:layout_height="185dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/passenger"></ImageView>

        <Button
            android:id="@+id/btn_manage_passengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Passengers"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:padding="10dp"
            android:backgroundTint="#CD182D"

            ></Button>

    </LinearLayout>



</ScrollView>